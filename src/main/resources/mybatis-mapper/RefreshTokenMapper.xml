<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.aha.auth.repository.RefreshTokenMapper">
    <select id="findByEmail" resultType="RefreshToken">
        SELECT *
        FROM refresh_token
        WHERE email = #{email}
    </select>
    <insert id="save" parameterType="RefreshToken" keyProperty="email">
        INSERT INTO refresh_token(email, token)
        VALUES (#{email}, #{token})
    </insert>
    <update id="update" parameterType="RefreshToken">
        UPDATE refresh_token
        SET token= #{token}
        WHERE email = #{email}
    </update>
</mapper>
