<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.aha.user.repository.UserMapper">
    <select id="findById" resultType="User">
        SELECT login_id, role_id, register_date, profile_img_path
        from user
        where id = #{id}
    </select>
    <select id="findByLoginId" resultType="User">
        SELECT *
        from user
        where login_id = #{id}
    </select>
    <select id="findAll" resultType="User">
        SELECT *
        from user
    </select>
    <insert id="save" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into user (login_id, role_id, password)
        values (#{loginId}, #{roleId}, #{password})
    </insert>
    <delete id="delete">
        delete
        from user
        where id = #{id}
    </delete>

</mapper>
