<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.aha.board.repository.PostMapper">
    <select id="findById" resultType="Post">
        SELECT *
        from post
        where id= #{id}
    </select>
    <select id="findByBoardId" resultType="Post">
        SELECT *
        from post
        where board_id= #{boardId}
    </select>
    <insert id="save" parameterType="Post" useGeneratedKeys="true" keyProperty="id">
        insert into post (content, title, user_id, board_id)
        values (#{content}, #{title}, #{userId}, #{boardId})
    </insert>
    <delete id="delete">
        delete from post
        where id = #{id}
    </delete>
    <update id="update">
        update into post
        set title=#{title}, content=#{content}
    </update>

</mapper>